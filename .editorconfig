# editorconfig.org

root = true

[*]
charset = utf-8
end_of_line = lf
indent_size = 4
indent_style = space
insert_final_newline = true
trim_trailing_whitespace = true

[*.{yml,scss}]
indent_size = 2

[*.{blade.php,md}]
indent_size = 2
trim_trailing_whitespace = false

[{vendor/**,node_modules/**}]
trim_trailing_whitespace = false
insert_final_newline = false
